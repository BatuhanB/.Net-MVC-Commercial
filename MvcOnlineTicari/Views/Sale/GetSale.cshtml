@model MvcOnlineTicari.Models.Entity.SaleBehavior
@{
    ViewBag.Title = "GetSale";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <br />
    <h2>Departman Güncelleme</h2>
    <br />
    @using (Html.BeginForm("UpdateSale", "Sale", FormMethod.Post))
    {
<div class="form-group">
    
    @Html.LabelFor(x => x.Product)
    @Html.DropDownListFor(x => x.ProductID, (List<SelectListItem>)ViewBag.prdcts, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Current)
    @Html.DropDownListFor(x => x.CurrentID, (List<SelectListItem>)ViewBag.crrnts, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Employee)
    @Html.DropDownListFor(x => x.EmployeeID, (List<SelectListItem>)ViewBag.emplys, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SaleQuantity)
    @Html.TextBoxFor(x => x.SaleQuantity, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SalePrice)
    @Html.TextBoxFor(x => x.SalePrice, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SaleSumAmount)
    @Html.TextBoxFor(x => x.SaleSumAmount, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.SaleDate)
    @Html.TextBoxFor(x => x.SaleDate, new { @class = "form-control" })
    <br />
    @Html.HiddenFor(x => x.SaleID)
</div>
        <button class="btn btn-warning">Güncelle</button>
    }
</div>