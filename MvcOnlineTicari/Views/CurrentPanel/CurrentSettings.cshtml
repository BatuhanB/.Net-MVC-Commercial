@model MvcOnlineTicari.Models.Entity.Current

@using (Html.BeginForm("CurrentInfoUpdate", "CurrentPanel", FormMethod.Post))
{
<form class="form-horizontal">
    @Html.HiddenFor(x => x.CurrentID)
    <div class="form-group row">
        <label for="inputName" class="col-sm-2 col-form-label">İsim</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CurrentName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label for="inputSkills" class="col-sm-2 col-form-label">Soyisim</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CurrentSurName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label for="inputEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CurrentMail, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label for="inputName2" class="col-sm-2 col-form-label">Şehir</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CurrentCity, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <label for="inputExperience" class="col-sm-2 col-form-label">Şifre</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.CurrentPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <div class="checkbox">
                <label>
                    <input type="checkbox"><a href="#"> Sözleşmeyi okudum </a>kabul ediyorum.
                </label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button class="btn btn-danger">Güncelle</button>
        </div>
    </div>
</form>
}