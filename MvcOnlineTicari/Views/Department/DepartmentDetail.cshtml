@using MvcOnlineTicari.Models.Entity
@model List<Employee>
@{
    ViewBag.Title = "DepartmentDetail";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid" >
    <h2 class="mt-4">Departman Detay Sayfası</h2>
    <br />
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active" style="font-weight:500">Departman adı: @ViewBag.departmentName</li>
    </ol>

    <table class="table table-hover">
        <tr>
            <th>Personel ID</th>
            <th>Personel Ad</th>
            <th>Personel Soyad</th>
            <th>Personel Görsel</th>
            <th>Satışlar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeID</td>
                <td>@item.EmployeeName</td>
                <td>@item.EmployeeSurName</td>
                <td><img src="@item.EmployeeImage" style="vertical-align: bottom; width: 102px; height: 68px;" /></td>
                <td><a href="/Department/DepartmentEmployeeSale/@item.EmployeeID" class="btn btn-default" style="background-color:orange;font-weight:500">Satışlar</a></td>
            </tr>
        }

    </table>
</div>