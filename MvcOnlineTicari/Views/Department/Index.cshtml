<div class="container-fluid">
    <br />
    <h1 class="display-4 font-weight-bold" id="page-headers">Departman Bilgileri</h1>
    <br />
    <div class="border border-light" id="data-tables" style="margin-bottom: 20px;">
        <table class="table table-borderless" style="margin:20px auto;">
            <tr id="custom-tr-2">
                <th>Departman Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr id="custom-tr">
                    <td>@item.DepartmentName</td>
                    <td><a href="/Department/DeleteDepartment/@item.DepartmentID" class="btn btn-outline-danger button-6">Sil</a></td>
                    <td><a href="/Department/GetDepartment/@item.DepartmentID" class="btn btn-outline-success button-7">Güncelle</a></td>
                    <td><a href="/Department/DepartmentDetail/@item.DepartmentID" class="btn btn-outline-dark button-8">Detaylar</a></td>
                </tr>
            }
        </table>
        <a @*href="/Department/AddDepartment/"*@ class="btn btn-warning" style="margin:0 0 10px 10px;" data-toggle="modal" data-target="#Department">Yeni Departman</a>
    </div>
</div>
<div class="modal" id="Department">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title" style="margin:0 auto;font-weight:700;">Yeni Departman</h2>
            </div>
            <form class="form-group" method="post" action="/Department/AddDepartment/">
                <div class="modal-body">
                    <label>Departman Adi</label>
                    <input type="text" name="DepartmentName" class="form-control"/>
                    <br />
                    <label>Departman Durumu</label>
                    <input type="text" name="DepartmentStatus" class="form-control"/>
                    <br />
                    <button class="btn btn-info">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>
