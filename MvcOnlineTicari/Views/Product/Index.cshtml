@using MvcOnlineTicari.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <br />
    @using (Html.BeginForm("Index", "Product", FormMethod.Get))
    {
        <p>
            Ürün Adı: @Html.TextBox("search")
            <input type="submit" value="Ara" />
        </p>
    }
    <br />
    <table class="table table-condensed">
        <tr>
            <th>Ürün</th>
            <th>Marka</th>
            <th>Stok</th>
            <th>Alis Fiyat</th>
            <th>Satis Fiyat</th>
            <th>Kategori</th>
            <th>Gorsel</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Satış Yap</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.ProductBrand</td>
                <td>@item.ProductStock</td>
                <td>@item.ProductPurchasePrice ₺</td>
                <td>@item.ProductSalePrice ₺</td>
                <td>@item.Category.CategoryName</td>
                <td><img src=@item.ProductImage style="vertical-align: bottom; width:58px; height:58px; "></td>
                <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-outline-danger">Sil</a></td>
                <td><a href="/Product/GetProduct/@item.ProductID" class="btn btn-outline-warning">Güncelle</a></td>
                <td><a href="/Product/Sale/@item.ProductID" class="btn btn-outline-info">Satış Yap</a></td>
            </tr>
        }
    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
    <a href="/Product/AddProduct/" class="btn btn-danger">Yeni Urun</a>
</div>