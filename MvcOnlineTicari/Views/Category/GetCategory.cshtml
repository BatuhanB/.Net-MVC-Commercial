@model MvcOnlineTicari.Models.Entity.Category
@{
    ViewBag.Title = "GetCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="container-fluid">
    <br />
    <h2>Kategori Guncelleme</h2>
    <br />
    @using (Html.BeginForm("UpdateCategory", "Category", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.CategoryName)
            @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CategoryName, "", new { @style = "color:red" })
            @Html.HiddenFor(x => x.CategoryID)
        </div>
        <button class="btn btn-warning">Güncelle</button>
    }
</div>