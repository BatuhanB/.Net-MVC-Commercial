@using MvcOnlineTicari.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
<style>

    h3 {
        margin: 10px 0;
    }

    h6 {
        margin: 5px 0;
        text-transform: uppercase;
    }

    p {
        font-size: 14px;
        line-height: 21px;
    }

    .card-container {
        background-color: #0d104f;
        border-radius: 5px;
        color: #B3B8CD;
        padding-top: 30px;
        position: relative;
        width: 425px !important;
        max-width: 100%;
        height: 375px;
        text-align: center;
        display: inline-block;
        margin: 10px 10px !important;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.4);
        transition: 0.3s;
    }
        .card-container:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.6);
        }

        .card-container .round {
            border: 1px solid #03BFCB;
            border-radius: 10%;
            padding: 2px;
        }

    button.primary {
        background-color: #03BFCB;
        border: 1px solid #03BFCB;
        border-radius: 3px;
        color: #231E39;
        font-family: Montserrat, sans-serif;
        font-weight: 500;
        padding: 10px 25px;
        transition:.3s;
    }
    button.primary:hover {
        box-shadow: 0 10px 20px 0 rgba(3, 190, 203,0.6);
    }

        button.primary.ghost {
            background-color: transparent;
            color: #02899C;
            transition: .3s;
        }

            .skills {
                background-color: #1F1A36;
                text-align: left;
                padding: 15px;
                margin-top: 30px;
            }

        .skills ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
        }

            .skills ul li {
                border: 1px solid #2D2747;
                border-radius: 2px;
                display: inline-block;
                font-size: 12px;
                margin: 0 7px 7px 0;
                padding: 7px;
            }
</style>
<div class="container-fluid">
    <br />
    <h1 class="display-4 font-weight-bold" id="page-headers">Personel Listesi</h1>
    <br />
    <div class="row">
        <div class="col-md-10 mx-auto">
            @foreach (var item in Model)
            {
                <div class="card-container ">
                    <img class="round" src="@item.EmployeeImage" alt="user" style="width:160px;height:120px; " />
                    <h3>@item.EmployeeName @item.EmployeeSurName</h3>
                    <h6>@item.Department.DepartmentName</h6>
                    <p>User interface designer and <br /> front-end developer</p>
                    <div class="buttons">
                        <button class="primary" href="/Employee/GetEmployee/@item.EmployeeID"  style="margin-top:15px;">
                            Güncelle
                        </button>
                        <button class="primary ghost" href="/Department/DepartmentEmployeeSale/@item.EmployeeID"  style="margin-top: 15px;">
                            Detaylar
                        </button>
                    </div>
                </div>
            }
            @*<div class="skills">
                    <h6>Skills</h6>
                    <ul>
                        <li>UI / UX</li>
                        <li>Front End Development</li>
                        <li>HTML</li>
                        <li>CSS</li>
                        <li>JavaScript</li>
                        <li>React</li>
                        <li>Node</li>
                    </ul>
               </div>*@
        </div>
    </div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page })
                           , new PagedListRenderOptions
                           {
                               LiElementClasses = new List<string>
                               {"page-link","pagination", "justify-content-center"," m-0"}
                           })
    <a href="/Employee/AddEmployee/" class="btn btn-secondary" style="color:white">Personel Ekle</a>
</div>