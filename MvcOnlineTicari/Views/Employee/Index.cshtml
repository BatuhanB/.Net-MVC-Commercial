@using MvcOnlineTicari.Models.Entity
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Employee>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/AdminLTE-3.0.4/dist/css/adminlte.min.css">
<div class="container-fluid">
    <br />
    <h2>Burasi Personel Sayfasidir</h2>
    <table id="employees" class="table table-hover">
        <tr>
            <th>Isim</th>
            <th>Soyisim</th>
            <th>Resim</th>
            <th>Departman</th>
            <th>Guncelle</th>
            <th>Satışlar</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeName</td>
                <td>@item.EmployeeSurName</td>
                <td><img src="@item.EmployeeImage" style="vertical-align: bottom; width: 102px; height: 68px;" /></td>
                <td>@item.Department.DepartmentName</td>
                <td><a class="btn btn-warning" style="color:black;font-weight:500" href="/Employee/GetEmployee/@item.EmployeeID">Guncelle</a></td>
                <td><a class="btn btn-success" style="color: black; font-weight: 500" href="/Department/DepartmentEmployeeSale/@item.EmployeeID">Detaylar</a></td>
            </tr>
        }
    </table>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page })
               , new PagedListRenderOptions
               {
                   LiElementClasses = new List<string>
                   {"page-link","pagination", "justify-content-center"," m-0"}
               })
    <a href="/Employee/AddEmployee/" class="btn btn-secondary" style="color:white">Personel Ekle</a>
</div>