@model MvcOnlineTicari.Models.Entity.Employee
@{
    ViewBag.Title = "AddEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<div class="container-fluid">
    <h2>Yeni Çalışan Sayfası</h2>
    <br />
    @using (Html.BeginForm("AddEmployee", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <form class="form-group" method="post">
            @Html.LabelFor(x => x.EmployeeName)
            @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.EmployeeName, "", new { @style = "color:red" })
            <br />
            @Html.LabelFor(x => x.EmployeeSurName)
            @Html.TextBoxFor(x => x.EmployeeSurName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.EmployeeSurName, "", new { @style = "color:red" })
            <br />
            @Html.LabelFor(x => x.EmployeeImage)
            @*@Html.TextBoxFor(x => x.EmployeeImage, new { @class = "form-control" })*@
            <input class="form-control" type="file" id="formFile" name="EmployeeImage">
            <br />
            @Html.LabelFor(x => x.Department)
            @Html.DropDownListFor(x => x.DepartmentID, (List<SelectListItem>)ViewBag.value1, new { @class = "form-control" })
            <br />
            <button class="btn btn-info">Kaydet</button>
        </form>
    }
</div>